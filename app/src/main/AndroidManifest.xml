<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="novapplications.goodlooks">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".CustomerHome"
            android:label="@string/title_activity_customer_home"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".StylistHome"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".OwnerHome"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".SettingsStylist"
            android:label="@string/title_activity_settings_stylist"
            android:parentActivityName=".StylistHome"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="novapplications.goodlooks.StylistHome"/>
        </activity>
        <activity android:name=".CustomerCategoryPicker"/>
        <activity android:name=".CustomerStylistPicker"/>
        <activity android:name=".CustomerStylistPicker2">
        </activity>
    </application>

</manifest>