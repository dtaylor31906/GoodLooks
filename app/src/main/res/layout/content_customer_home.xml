<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="novapplications.goodlooks.CustomerHome"
    tools:showIn="@layout/activity_customer_home">

    <Button
        android:id="@+id/appointmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Appointment"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/walkInButton"
        android:layout_marginStart="5dp" />

    <Button
        android:id="@+id/walkInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walk In"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/appointmentButton"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/appointmentButton"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.78" />

    <ListView
        android:id="@+id/appointmentListView"
        android:layout_width="0dp"
        android:layout_height="387dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/appointmentButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
